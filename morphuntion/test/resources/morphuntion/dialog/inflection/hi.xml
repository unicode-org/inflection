<inflectionTest locale="hi">
    <!-- Singular Plural Lookup Tests -->
    <test><source>लड़का</source><result number="singular"/></test>
    <test><source>आशिया</source><result number="singular"/></test>
    <test><source>दुकान</source><result number="singular"/></test>
    <test><source>दुकानें</source><result number="plural"/></test>
    <test><source>लड़का</source><result number="singular"/></test>
    <test><source>दरवाज़ा</source><result number="singular"/></test>
    <test><source>छोटा कमरा</source><result number="singular"/></test>
    <test><source>लाल बत्ती</source><result number="singular"/></test>
    <test><source>लाल बत्तियाँ</source><result number="plural"/></test>
    <test><source>लम्बी लड़कियाँ</source><result number="plural"/></test>
    <test><source>कमरे की बत्ती</source><result number="singular"/></test>
    <test><source>कमरे की बत्तियाँ</source><result number="plural"/></test>
    <test><source>कमरों की बत्ती</source><result number="singular"/></test>

    <!-- Singular Plural Inflection Tests -->
    <test><source number="plural">दुकान</source><result>दुकानें</result></test>
    <test><source number="plural">तस्वीर</source><result>तस्वीरें</result></test>
    <test><source number="plural">संदेश</source><result>संदेश</result></test>
    <test><source number="plural">दरवाज़ा</source><result>दरवाज़े</result></test>
    <test><source number="plural">कमरा</source><result>कमरे</result></test>
    <test><source number="plural">पंखा</source><result>पंखे</result></test>
    <test><source number="singular">ऐपलए</source><result>ऐपलआ</result></test> <!-- Madeup -->
    <test><source number="singular">अप्पलके</source><result>अप्पलका</result></test> <!-- Madeup -->
    <test><source number="plural">मोरफ़ूनु</source><result>मोरफ़ूनुएँ</result></test> <!-- Madeup -->
    <test><source number="plural">अप्पलेकी</source><result>अप्पलेकियाँ</result></test> <!-- Madeup -->
    <test><source number="plural">अबकया</source><result>अबकयाँ</result></test> <!-- Madeup -->
    <test><source number="plural">क्ष्यजआ</source><result>क्ष्यजए</result></test> <!-- Madeup -->
    <test><source number="plural">क्ष्यजा</source><result>क्ष्यजे</result></test> <!-- Madeup -->
    <test><source number="singular">कीबें</source><result>कीबे</result></test> <!-- Madeup -->
    <test><source number="singular">FaceTime</source><result>FaceTime</result></test> <!-- Latin -->
    <test><source number="plural">Apple</source><result>Apple</result></test> <!-- Latin -->

    <!-- Masculine Feminine Lookup Tests -->
    <test><source>लड़का</source><result gender="masculine"/></test>
    <test><source>लड़की</source><result gender="feminine"/></test>
    <test><source>आपका</source><result gender="masculine"/></test>
    <test><source>आपकी</source><result gender="feminine"/></test>
    <test><source>रहा</source><result gender="masculine"/></test>
    <test><source>कुत्ता</source><result gender="masculine"/></test>
    <test><source>गाना</source><result gender="masculine"/></test>
    <test><source>गाड़ी</source><result gender="feminine"/></test>
    <test><source>चलाया</source><result gender="masculine"/></test>
    <test><source>चलायी</source><result gender="feminine"/></test>
    <test><source>चल</source><result gender="masculine"/></test>
    <test><source>लम्बी लड़कियाँ</source><result gender="feminine"/></test>
    <test><source>ऊँचा पहाड़</source><result gender="masculine"/></test>

    <!--    Couldn't inflect possessive pronouns using dictionary-->
<!--    Waiting for Inconsistent number labeling of genitive second person Hindi pronouns -->
<!--    <test><source gender="feminine">आपका</source><result exists="true"/>आपकी</test>-->

<!-- Masculine Feminine Inflection Tests -->
<!--    support for ordinal numbers inflections)-->

    <!--first-->
    <test><source gender="feminine">पहला</source><result exists="true">पहली</result></test>
    <test><source gender="masculine">पहली</source><result exists="true">पहला</result></test>

    <!--second-->
    <test><source gender="feminine">दूसरा</source><result exists="true">दूसरी</result></test>
    <test><source gender="masculine">दूसरी</source><result exists="true">दूसरा</result></test>

    <!--third-->
    <test><source gender="feminine">तीसरा</source><result exists="true">तीसरी</result></test>
    <test><source gender="masculine">तीसरी</source><result exists="true">तीसरा</result></test>

    <!-- adjective inflections (qualifying and possessive)-->
    <!--open-->
    <test><source gender="feminine">खुला</source><result exists="true">खुली</result></test>
    <test><source gender="masculine">खुली</source><result exists="true">खुला</result></test>

    <!--new-->
    <test><source gender="feminine">नया</source><result exists="true">नई</result></test>
    <test><source gender="masculine">नई</source><result exists="true">नया</result></test>

    <!--hidden-->
    <test><source gender="feminine">छिपा</source><result exists="true">छिपी</result></test>
    <test><source gender="masculine">छिपी</source><result exists="true">छिपा</result></test>

    <!-- support for verb inflections-->
    <!--done-->
    <test><source gender="feminine">गया</source><result exists="true">गई</result></test>
    <test><source gender="masculine">गई</source><result exists="true">गया</result></test>

    <!--pressed-->
    <test><source gender="feminine">दबाया</source><result exists="true">दबाई</result></test>
    <test><source gender="masculine">दबाई</source><result exists="true">दबाया</result></test>

    <test><source gender="masculine">Calculator</source><result>Calculator</result></test> <!-- Latin Words -->
    <test><source gender="feminine">Clock</source><result>Clock</result></test> <!-- Latin Words -->

    <!-- Combination Lookup Tests -->
    <!--boy-->
    <test><source>लड़का</source><result gender="masculine" number="singular"/></test>
    <!--girls-->
    <test><source>लड़कियाँ</source><result gender="feminine" number="plural"/></test>

    <!-- Combination Inflection Tests -->
    <test><source gender="feminine" number="plural">आबका</source><result>आबकियाँ</result></test>
    <test><source gender="masculine" number="plural">कबकी</source><result>कबके</result></test>
    
    <!-- Curate adposition का with morphological information) -->
    <test><source gender="feminine">का</source><result exists="true">की</result></test>
    <test><source number="singular">के</source><result exists="true">का</result></test>
    <test><source number="plural">का</source><result exists="true">के</result></test>

    <test><source gender="masculine">की</source><result exists="true">का</result></test>
    <test><source number="singular">की</source><result exists="true">की</result></test>
    <test><source number="plural">की</source><result exists="true">की</result></test>

    <!-- Feminine preview is incorrect for सकते and करते)-->
    <test><source gender="feminine">सकता</source><result exists="true">सकती</result></test>
    <test><source gender="feminine">सकते</source><result exists="true">सकतीं</result></test>
    <test><source gender="feminine">सकते हैं</source><result exists="true">सकती हैं</result></test>

    <test><source gender="feminine">करता</source><result exists="true">करती</result></test>
    <test><source gender="feminine">करते</source><result exists="true">करतीं</result></test>
    <test><source gender="feminine">करते हैं</source><result exists="true">करती हैं</result></test>

    <test><source gender="feminine">चाहता</source><result exists="true">चाहती</result></test>
    <test><source gender="feminine">चाहते</source><result exists="true">चाहतीं</result></test>
    <test><source gender="feminine">चाहते हैं</source><result exists="true">चाहती हैं</result></test>

    <test><source gender="feminine">रहा</source><result exists="true">रही</result></test>
    <test><source gender="feminine">रहे</source><result exists="true">रहीं</result></test>
    <test><source gender="feminine">रहे हैं</source><result exists="true">रही हैं</result></test>

    <test><source gender="feminine">चलते</source><result exists="true">चलतीं</result></test>
    <test><source gender="feminine">चलते रहते</source><result exists="true">चलती रहतीं</result></test>
    <test><source gender="feminine">चलते रहते हैं</source><result exists="true">चलती रहती हैं</result></test>

    <!-- Handle Oblique Case for Hindi Phrases)-->
    <test><source number="singular">गलियारा में</source><result exists="true">गलियारे में</result></test>
    <test><source number="singular">दरवाज़ा का</source><result exists="true">दरवाज़े का</result></test>
    <test><source gender="feminine">दरवाज़ा का बात</source><result exists="true">दरवाज़े की बात</result></test>

    <!-- Recurate and simply lemmas for verb था)-->
    <test><source gender="feminine">सकते थे</source><result>सकती थीं</result></test>
    <test><source gender="feminine">करते थे</source><result>करती थीं</result></test>
    <test><source gender="feminine">चाहते थे</source><result>चाहती थीं</result></test>

    <!-- support for noun inflections)-->
    <test><source gender="feminine">आयोजक</source><result>आयोजिका</result></test>
    <test><source gender="feminine">बच्चा</source><result>बच्ची</result></test>
    <test><source gender="feminine">निर्माता</source><result>निर्मात्री</result></test>
    <test><source gender="feminine">शिक्षक</source><result>शिक्षिका</result></test>
    <test><source gender="feminine">गायक</source><result>गायिका</result></test>
    <test><source gender="feminine">लेखक</source><result>लेखिका</result></test>
    <test><source gender="feminine">सदस्य</source><result>सदस्या</result></test>
    <test><source gender="feminine">अभिभावक</source><result>अभिभाविका</result></test>

</inflectionTest>
