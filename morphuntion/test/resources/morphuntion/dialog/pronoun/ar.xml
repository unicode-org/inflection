    <test><source person="third" number="singular" gender="feminine" case="nominative"/><result>هي</result></test>
    <test><source person="third" number="dual" case="nominative"/><result>هُمَا</result></test>
    <test><source person="second" number="plural" gender="masculine" case="nominative"/><result>أنتم</result></test>
